<div class='haha-maincontent'>
  <form role='form' action="/client/create" method="POST" class="haha-form-signup">
    <h3>新建<%= title %></h3>
    <hr/>
    <div class="row">
      <div class="col-md-4">
        <div class='form-group'>
          <select name="type" id="client-type" class="form-control input-sm">
            <% ClientType.find({}).done(function(err, vals) { %>
            <%   for (var i = 0; i < vals.length; ++i) { %>
            <option value="<%= vals[i].id %>"><%= vals[i].name %></option>
            <%   } %>
            <% }) %>
          </select>
        </div>
      </div>
    </div>
		<div class="panel panel-default">
			<div class="panel-heading">客户基本资料</div>
			<div class="panel-body">
        <div class="row">
          <div class="col-md-4">
            <div class='form-group' individual>
              <label class='control-label' for="name">姓名</label>
              <input type='text' class='form-control input-sm' name='name'/>
            </div>
            <div class='form-group hide' company>
              <label class='control-label' for="name">公司名称</label>
              <input type='text' class='form-control input-sm' name='name'/>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group' individual>
              <label class='control-label' for="pid">身份证号码</label>
              <input type='text' class='form-control input-sm' name='pid'/>
            </div>
            <div class='form-group hide' company>
              <label class='control-label' for="pid">企业编号</label>
              <input type='text' class='form-control input-sm' name='pid'/>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group'>
              <label class='control-label' for="domains"><%= display_name["domains"] %></label>
              <select name="domains" class="form-control input-sm" multiple>
                <% Domain.find({}).done(function(err, vals) { %>
                <%   for (var i = 0; i < vals.length; ++i) { %>
                <option value="<%= vals[i].id %>"><%= vals[i].name %></option>
                <%   } %>
                <% }) %>
              </select>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class='form-group'>
              <label class='control-label' for="email"><%= display_name["email"] %></label>
              <input type='text' class='form-control input-sm' name='email'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group'>
              <label class='control-label' for="phone"><%= display_name["phone"] %></label>
              <input type='text' class='form-control input-sm' name='phone'/>
            </div>
          </div>
          <div class="col-md-6">
            <div class='form-group'>
              <label class='control-label' for="address"><%= display_name["address"] %></label>
              <input type='text' class='form-control input-sm' name='address'/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class='form-group' individual>
              <label class='control-label' for="employer"><%= display_name["employer"] %></label>
              <input type='text' class='form-control input-sm' name='employer'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group' individual>
              <label class='control-label' for="education"><%= display_name["education"] %></label>
              <input type='text' class='form-control input-sm' name='education'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group' individual>
              <label class='control-label' for="title"><%= display_name["title"] %></label>
              <input type='text' class='form-control input-sm' name='title'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group' individual>
              <label class='control-label' for="yearly_income"><%= display_name["yearly_income"] %></label>
              <input type='text' class='form-control input-sm' name='yearly_income'/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="legal_person"><%= display_name["legal_person"] %></label>
              <input type='text' class='form-control input-sm' name='legal_person'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="contact"><%= display_name["contact"] %></label>
              <input type='text' class='form-control input-sm' name='contact'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="contact_phone"><%= display_name["contact_phone"] %></label>
              <input type='text' class='form-control input-sm' name='contact_phone'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="founded"><%= display_name["founded"] %></label>
              <input type='text' class='form-control input-sm' name='founded' datepicker/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class='form-group hide' company>
              <label class='control-label' for="products"><%= display_name["products"] %></label>
              <input type='text' class='form-control input-sm' name='products'/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class='form-group hide' company>
              <label class='control-label' for="registered_captical"><%= display_name["registered_captical"] %></label>
              <input type='text' class='form-control input-sm' name='registered_captical'/>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group hide' company>
              <label class='control-label' for="total_asset"><%= display_name["total_asset"] %></label>
              <input type='text' class='form-control input-sm' name='total_asset'/>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group hide' company>
              <label class='control-label' for="net_asset"><%= display_name["net_asset"] %></label>
              <input type='text' class='form-control input-sm' name='net_asset'/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class='form-group hide' company>
              <label class='control-label' for="asset_liability_ratio"><%= display_name["asset_liability_ratio"] %></label>
              <input type='text' class='form-control input-sm' name='asset_liability_ratio'/>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group hide' company>
              <label class='control-label' for="current_ratio"><%= display_name["current_ratio"] %></label>
              <input type='text' class='form-control input-sm' name='current_ratio'/>
            </div>
          </div>
          <div class="col-md-4">
            <div class='form-group hide' company>
              <label class='control-label' for="quick_ratio"><%= display_name["quick_ratio"] %></label>
              <input type='text' class='form-control input-sm' name='quick_ratio'/>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="sales_income_last_year"><%= display_name["sales_income_last_year"] %></label>
              <input type='text' class='form-control input-sm' name='sales_income_last_year'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="sales_income_curr_year"><%= display_name["sales_income_curr_year"] %></label>
              <input type='text' class='form-control input-sm' name='sales_income_curr_year'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="profit_last_year"><%= display_name["profit_last_year"] %></label>
              <input type='text' class='form-control input-sm' name='profit_last_year'/>
            </div>
          </div>
          <div class="col-md-3">
            <div class='form-group hide' company>
              <label class='control-label' for="profit_curr_year"><%= display_name["profit_curr_year"] %></label>
              <input type='text' class='form-control input-sm' name='profit_curr_year'/>
            </div>
          </div>
        </div>
			</div>
		</div>
		<div class="panel panel-default hide" company>
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-2">股权结构</div>
          <div class="col-md-8"></div>
          <div class="col-md-2">
            <button type="button" class="btn btn-primary btn-block btn-xs" data-toggle="modal" data-target="#new-shareholder-modal">添加股东信息</button>
          </div>
        </div>
      </div>
			<div class="panel-body">
        <div id="new-shareholder-modal" class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">添加股东信息</h4>
              </div>
              <div class="modal-body">
                <div class="form-horizontal">
                  <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">姓名</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="name" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="amount" class="col-sm-2 control-label">出资额</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="amount" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="form" class="col-sm-2 control-label">出资方式</label>
                    <div class="col-sm-10">
                      <select name="form" id="form" class="form-control">
                        <% ShareholderForm.find({}).done(function(err, vals) { %>
                        <%   for (var i = 0; i < vals.length; ++i) { %>
                        <option value="<%= vals[i].id %>"><%= vals[i].name %></option>
                        <%   } %>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="share" class="col-sm-2 control-label">股权比例</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="share" />
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" id="shareholder-modal-save">保存</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <table class="table table-condensed table-hover" id="shareholders">
          <thead>
            <tr>
              <th>姓名</th>
              <th>出资额</th>
              <th>出资方式</th>
              <th>股权比例</th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>

    <hr/>
    <div class="row">
      <div class="col-md-2">
        <button type='submit' class='btn btn-primary btn-block'>创建</button>
      </div>
    </div>
    <input class='hidden' name='_csrf' value='<%= _csrf %>' />
	</form>
</div>
