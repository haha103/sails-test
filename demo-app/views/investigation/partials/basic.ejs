<div class="panel panel-default">
  <div class="panel-heading">调查概况</div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <label class='control-label' for="blacklisted"><%= display_name["blacklisted"] %></label>
        <div class='form-group'>
          <select name="blacklisted" id="blacklisted" class="form-control input-sm" multiple>
            <% Blacklist.find({}).done(function(err, vals) { %>
            <%   for (var i = 0; i < vals.length; ++i) { %>
            <option value="<%= vals[i].id %>"><%= vals[i].name %></option>
            <%   } %>
            <% }) %>
          </select>
        </div>
      </div>
      <div class="col-md-4">
        <div class='form-group'>
          <label class='control-label' for="credit_rating"><%= display_name["credit_rating"] %></label>
          <select name="credit_rating" id="credit_rating" class="form-control input-sm">
            <% for (var i = 1; i <= 5; ++i) { %>
            <option value="<%= i %>"><%= i %></option>
            <% } %>
          </select>
        </div>
      </div>
      <div class="col-md-4">
        <div class='form-group'>
          <label class='control-label' for="avg_score"><%= display_name["avg_score"] %></label>
          <input type='text' class='form-control input-sm' name='avg_score'/>
        </div>
      </div>
    </div>
    <div class='form-group'>
      <label class='control-label' for="case_summary"><%= display_name["case_summary"] %></label>
      <textarea class='form-control' name='case_summary' rows="5"></textarea>
    </div>
  </div>
</div>
